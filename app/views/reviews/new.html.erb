<h1>EDIT NEW REVIEW</h1>

<div class="container">
  <div class="row">
    <div class="col-6 offset-2">
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: (0..5) %>
        <%= f.submit  %>
      <% end %>
    </div>
  </div>
</div>
