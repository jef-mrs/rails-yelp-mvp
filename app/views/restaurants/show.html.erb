<div class="container">
  <div class="row">

      <h1 class="text-center" style='text-shadow:0 6px 10px rgba(255, 255, 255, 0.2); color:white; font-size:40px; font-weight:bolder; font-family:Edu TAS Beginner;'><%= @restaurant.name %></h1>
      <div class="col-4 offset-4">
      <div class="card" style='font-family:Edu TAS Beginner; padding: 0 12px'>
        <p><%= @restaurant.address %></p>
        <p><%= @restaurant.category.capitalize %></p>
        <p><%= @restaurant.phone_number %></p>
        <ul class="list-group list-group-flush" style="list-style-type: none">
          <p>REVIEWS</p>
          <% @restaurant.reviews.each do |review| %>
          <li><%= review.content %>   <%= review.rating > 0 ? '*' * review.rating : '' %></li>
          <% end %>
        </ul>
        <div class="container" style="margin: 16px 0">
      <h4>EDIT NEW REVIEW</h4>
        <div class="row">
          <div class="col-6 offset-2" style="width: 100%; margin: 0" >
          <% review = Review.new %>
            <%= simple_form_for review do |f| %>
              <%= f.input :content %>
              <%= f.input :rating, collection: (0..5) %>
              <%= f.submit  %>
              <% end %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
